				<regexpmapper from="^CF_.+_(.+)\d{4}/+(.*)" to="\1/\2" />
				<regexpmapper from="(.*)_cf(.).+\.class$$" to="\1.cf\2" />
			</chainedmapper>
		</copy>
	</target>

