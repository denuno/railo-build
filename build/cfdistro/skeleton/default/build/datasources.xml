<datasources>
	<!-- 
		default h2 datasource
	 -->
	<datasource 
		name="@distro.name@" 
		class="org.h2.Driver" 
		host="127.0.0.1" 
		port="3306" 
		database="@distro.name@"
		username="@dsn.username@" 
		password="@dsn.password@" 
		blob="false"
		clob="false" 
		sqlstoredprocedures="true"
		sqlinsert="true"
		sqlselect="true"
		sqlupdate="true"
		sqldelete="true"
		maintainconnection="true"
		logintimeout="120"
		connectionretries="0"
		connectionlimit="-1"
		connectiontimeout="1"
		custom=""
		jdbcstring="jdbc:h2:@user.home@/h2dbs/@distro.name@/@distro.name@"
		jdbc="h2"
		 />
	<!-- 
	MySQL example
	
	<datasource 
		name="@distro.name@" 
		host="127.0.0.1" 
		port="3306" 
		database="@distro.name@"
		username="@dsn.username@" 
		password="@dsn.password@" 
		jdbc="mysql"
		class="org.gjt.mm.mysql.Driver" 
		jdbcstring="jdbc:mysql://127.0.0.1:3306/@distro.name@"
		 />
 	-->

</datasources>